<?xml version="1.0"?>
<launch>
    <include file="$(find gazebo_ros)/launch/empty_world.launch" > 
    <arg name="use_sim_time" value="true"/>
    <arg name="debug" value="false"/>
    <arg name="gui" value="true"/>
    <arg name="world_name" value="$(find deliver_rb)/worlds/office.world"/> 
  </include>

  <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="log">
    <param name="base_frame" value="base_link"/>
    <param name="odom_frame" value="odom"/>
    <param name="map_frame"  value="map"/>
    <rosparam command="load" file="$(find deliver_rb)/config/gmapping_params.yaml" />
     <remap from="/scan" to="/deliver_rb/laser/scan"/>
  </node>
  
  <arg name="open_rviz" default="true"/>
  <param
    name="robot_description" command="$(find xacro)/xacro '$(find deliver_rb)/urdf/deliver_rb_new.urdf.xacro'" />

  <node pkg="joint_state_publisher" name="joint_state_publisher"  type="joint_state_publisher" ></node>
  
  <node pkg="deliver_rb" name="teleop" type="teleop.py" ></node> 
 
	
  <node pkg="robot_state_publisher" name="robot_state_publisher"  type="robot_state_publisher" output="screen" > 
  <param name="publish_frequency" type="double" value="20.0" />
	</node>
	
  <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-urdf -param robot_description -x 1.0 -y 1.0 -z 0.1 -model robot_model" respawn="false" output="screen"/>
  
  <group if="$(arg open_rviz)">  
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find deliver_rb)/display.rviz" />
  </group>
</launch>
